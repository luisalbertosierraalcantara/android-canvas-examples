<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.ramuta.mycanvasapp.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.ramuta.mycanvasapp.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.ramuta.mycanvasapp.app.simple.SimpleActivity"
            android:label="@string/title_activity_simple"
            android:parentActivityName="me.ramuta.mycanvasapp.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.ramuta.mycanvasapp.app.MainActivity" />
        </activity>
        <activity
            android:name="me.ramuta.mycanvasapp.app.simple.Simple2Activity"
            android:label="@string/title_activity_simple2"
            android:parentActivityName="me.ramuta.mycanvasapp.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.ramuta.mycanvasapp.app.MainActivity" />
        </activity>
    </application>

</manifest>
